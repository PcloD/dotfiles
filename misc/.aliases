alias gpf="git push --force"
alias gdno="git diff --name-only "

toggle_repeat() {
  if [[ -z "${XSET_R_STATE}" ]]; then
    XSET_R_STATE="ON"
    xset r on
  elif [[ "$XSET_R_STATE" == "OFF" ]]; then
    XSET_R_STATE="ON"
    xset r on
  else
    XSET_R_STATE="OFF"
    xset r off
  fi
}

alias hexo_drafts="ag title source/_drafts --no-filename"
