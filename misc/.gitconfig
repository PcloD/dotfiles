[user]
  email = kp@bit-101.com
  name = Keith Peters
[push]
  default = simple

[diff]
  tool = nvim
[difftool "nvim"]
  cmd = nvim -d $LOCAL $REMOTE
[difftool]
  prompt=false

[merge]
  tool = vimdiff
  conflictstyle=diff3
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
  keepBackup=false
  prompt=false
